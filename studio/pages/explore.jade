extends ./layout

block link
  -var selected = 'Explore';
block content
  script(src="../../scripts/explore.js")
  script(src="../../scripts/generate_graph.js")  
  // Counts Section
  .pagebox
    section.dashboard-counts
      header
        .boxdisplay.largetitle Explore
      .container-fluid
        .row
          // Count item widget
          .col-md-12
            .wrapper.count-title.d-flex
              .name
                a.btn.btn-main(href='explore/filter_search', style='float:left; margin-right:20px')
                  strong.text-uppercase.searchButton
                    i.fa.fa-search.searchButtoncicon(aria-hidden='true')
                    |  Filter Search
                a.btn.btn-main(href='explore/sql_search', style='float:left;')
                  strong.text-uppercase.searchButton
                    i.fa.fa-search.searchButtoncicon(aria-hidden='true')
                    |  SQL
    .container-fluid
      .row
        // Count item widget
        .col-md-6
          .subheader.boxdisplay-sub
            i.fa.fa-search.searchButtoncicon.mr-1(aria-hidden='true' style="color: #6967B8")
            | Recent
          .wrapper.count-title.d-flex
            .list-group.w-100
              table#recentTable.table.table-striped(style="width:100%")

        // Count item widget
        .col-md-6
          .subheader.boxdisplay-sub
            span
              i.fa.fa-star.mr-1(style="color: yellow")
            | Favorites
          .wrapper.count-title.d-flex(styles="height: 491px")
            .list-group.w-100
              table#favorTable.table.table-striped(style="width:100%")

    .boxdisplay.subheader.boxdisplay-sub Recently Favorited Dashboard
    // Statistics Section
    section.statistics
      .container-fluid
        .row.d-flex
          .col-lg-4(data-toggle='tooltip', data-placement='top', title='Saved Charts' onclick="window.location.href='/explore/sql_search'")
            // Income
            .card.income.text-center.dashboardplusbox(style="height: 300px")
              .icon.iconplus
                i.fa.fa-plus(aria-hidden='true')
    .boxdisplay.subheader.boxdisplay-sub Saved Live Links
    .container-fluid
      .row
        .col-md-12
          table#livelinkTable.table.table-striped(style="width:100%")
      // Modal
    #deleteLivelinkModal.modal.fade(role='dialog', aria-hidden='true', aria-labelledby='exampleModalCenterTitle', tabindex='-1')
      .modal-dialog.modal-dialog-centered(role='document')
        .modal-content
          .modal-header
            #exampleModalLongTitle.modal-title.text-white Are you sure?
            button.close(data-dismiss='modal', type='button', aria-label='Close')
              i.fa.fa-times.text-red
          .modal-body.text-white
            p
              | Are you sure you want to permanently delete this live link?
          .modal-footer
            .col-md-12.p-0
              button#DeleteLivelinkBtn.btn.btn-maindelete.pull-right(data-dismiss='modal', type='button', aria-expanded='false', aria-haspopup='true', style='min-width:150px;')
                | Delete
              button.btn.btn-mainexit.pull-left(data-dismiss='modal', type='button', aria-expanded='false', aria-haspopup='true', style='min-width:150px;')
                | Exit
